{
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2015",
			"dom"
		],
		"mapRoot": "./",
		"baseUrl": ".",
		"stripInternal": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"module": "es2015",
		"moduleResolution": "node",
		"outDir": "../dist/out-tsc",
		"sourceMap": true,
		"inlineSources": true,
		"target": "es5",
		"types": [
			"node"
		],
		"typeRoots": [
			"../node_modules/@types"
		]
	},
	"angularCompilerOptions": {
		"strictMetadataEmit": true
	}
}
